---
import ThemeToggle from '../islands/ThemeToggle';
import '../styles/global.css';

interface Props {
  title?: string;
  activeNav?: 'inbox' | 'inteligencia' | 'saved' | 'archive' | 'vigilancia' | 'settings';
}

const { title = 'Folio', activeNav } = Astro.props;

const navItems = [
  { href: '/inbox', label: 'Inbox', key: 'inbox' as const, badge: false },
  { href: '/brief', label: 'Inteligencia', key: 'inteligencia' as const, badge: false },
  { href: '/saved', label: 'Saved', key: 'saved' as const, badge: false },
  { href: '/archive', label: 'Archive', key: 'archive' as const, badge: false },
  { href: '/watchlist', label: 'Vigilancia', key: 'vigilancia' as const, badge: true },
];
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Folio â€” Political Intelligence" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Folio</title>

    <!-- Prevent flash of wrong theme -->
    <script is:inline>
      (function () {
        const theme = localStorage.getItem('theme');
        if (theme === 'light') {
          document.documentElement.classList.remove('dark');
        } else {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>

  <body class="min-h-screen">
    <!-- Navigation -->
    <nav
      class="sticky top-0 z-50 border-b border-zinc-200 dark:border-zinc-800 bg-white/80 dark:bg-zinc-950/80 backdrop-blur-xl transition-theme"
    >
      <div class="max-w-5xl mx-auto px-4">
        <div class="flex items-center justify-between h-14">
          <!-- Left: Logo -->
          <a href="/inbox" class="flex items-center gap-2 shrink-0">
            <span
              class="font-bold text-xl tracking-tight text-zinc-900 dark:text-zinc-100"
            >
              Folio
            </span>
          </a>

          <!-- Center: Nav links -->
          <div class="flex items-center gap-1">
            {
              navItems.map((item) => (
                <a
                  href={item.href}
                  id={item.badge ? 'vigilancia-nav' : undefined}
                  class:list={[
                    'relative px-3 py-1.5 text-sm font-medium rounded-lg transition-colors',
                    activeNav === item.key
                      ? 'bg-zinc-100 dark:bg-zinc-800 text-zinc-900 dark:text-zinc-100'
                      : 'text-zinc-500 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-zinc-100 hover:bg-zinc-50 dark:hover:bg-zinc-800/50',
                  ]}
                >
                  {item.label}
                  {item.badge && (
                    <span
                      id="vigilancia-badge"
                      class="hidden ml-1.5 inline-flex items-center justify-center min-w-[18px] h-[18px] px-1 text-[10px] font-bold rounded-full bg-red-500 text-white animate-pulse"
                    />
                  )}
                </a>
              ))
            }
          </div>

          <!-- Right: Search, Theme, Settings, Logout -->
          <div class="flex items-center gap-2 shrink-0">
            <!-- Search -->
            <div class="relative hidden sm:block">
              <svg
                class="absolute left-2.5 top-1/2 -translate-y-1/2 w-3.5 h-3.5 text-zinc-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"
                ></path>
              </svg>
              <input
                type="text"
                placeholder="Search..."
                class="w-44 pl-8 pr-3 py-1.5 text-sm bg-zinc-100 dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 rounded-lg text-zinc-900 dark:text-zinc-100 placeholder-zinc-400 dark:placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-theme"
                id="nav-search"
              />
            </div>

            <!-- Theme Toggle -->
            <ThemeToggle client:load />

            <!-- Settings -->
            <a
              href="/settings"
              class:list={[
                'p-2 rounded-lg transition-colors',
                activeNav === 'settings'
                  ? 'bg-zinc-100 dark:bg-zinc-800 text-zinc-900 dark:text-zinc-100'
                  : 'text-zinc-400 hover:text-zinc-900 dark:hover:text-zinc-100 hover:bg-zinc-50 dark:hover:bg-zinc-800/50',
              ]}
              title="Settings"
            >
              <svg
                class="w-4 h-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.241-.438.613-.43.992a7.723 7.723 0 010 .255c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.991a6.932 6.932 0 010-.255c.007-.38-.138-.751-.43-.992l-1.004-.827a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.086.22-.128.332-.183.582-.495.644-.869l.214-1.28z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </a>

            <!-- Logout -->
            <button
              id="logout-btn"
              class="p-2 rounded-lg text-zinc-400 hover:text-red-400 hover:bg-zinc-50 dark:hover:bg-zinc-800/50 transition-colors"
              title="Logout"
            >
              <svg
                class="w-4 h-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15m3 0l3-3m0 0l-3-3m3 3H9"
                ></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main content -->
    <main class="max-w-5xl mx-auto px-4 py-6">
      <slot />
    </main>

    <!-- Logout handler -->
    <script is:inline>
      document.getElementById('logout-btn')?.addEventListener('click', async () => {
        try {
          await fetch('/api/logout', { method: 'POST', credentials: 'include' });
        } catch (e) {
          // ignore
        }
        window.location.href = '/login';
      });

      // Navigate to archive search on Enter in nav search
      document.getElementById('nav-search')?.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') {
          const q = e.target.value.trim();
          if (q) {
            window.location.href = `/archive?q=${encodeURIComponent(q)}`;
          }
        }
      });

      // Watchlist badge polling
      (async function pollUnseen() {
        try {
          const res = await fetch('/api/watchlist/hits/unseen', { credentials: 'include' });
          if (res.ok) {
            const data = await res.json();
            const badge = document.getElementById('vigilancia-badge');
            const nav = document.getElementById('vigilancia-nav');
            if (badge) {
              if (data.unseen > 0) {
                badge.textContent = data.unseen > 99 ? '99+' : String(data.unseen);
                badge.classList.remove('hidden');
                nav?.classList.add('vigilancia-glow');
              } else {
                badge.classList.add('hidden');
                nav?.classList.remove('vigilancia-glow');
              }
            }
          }
        } catch (e) { /* ignore */ }
        setTimeout(pollUnseen, 60000);
      })();
    </script>
  </body>
</html>
