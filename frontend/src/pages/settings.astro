---
import Layout from '../layouts/Layout.astro';
import SourcesManager from '../islands/SourcesManager';
import AdminTools from '../islands/AdminTools';
---

<Layout title="Settings" activeNav="settings">
  <div class="space-y-8">
    <div>
      <h1 class="text-2xl font-semibold text-zinc-900 dark:text-zinc-100 mb-1">
        Sources
      </h1>
      <p class="text-sm text-zinc-500 dark:text-zinc-400">
        Manage news sources and scrape configurations.
      </p>
    </div>

    <SourcesManager client:load />

    <hr class="border-zinc-200 dark:border-zinc-800" />

    <div>
      <h2 class="text-lg font-semibold text-zinc-900 dark:text-zinc-100 mb-1">
        Admin Tools
      </h2>
      <p class="text-sm text-zinc-500 dark:text-zinc-400">
        Maintenance actions for the Folio database.
      </p>
    </div>

    <AdminTools client:load />
  </div>
</Layout>
